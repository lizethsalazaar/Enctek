---
import StarIcon from '@icons/star.svg';
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
    icon: ImageMetadata;
    title: string;
    subtitle: string;
    image: ImageMetadata;
    option1: string;
    span1: string;
    option2: string;
    span2: string;
    option3: string;
    span3: string;
    text: string;
}

const { icon, title, subtitle, image, option1, option2, option3, span1, span2, span3, text } = Astro.props;
---

<article class="real">
    <div class="real__container">
        <div class="real__information">
            <div class="real__icon">
                <Image src={icon} alt="icon" />
            </div>
            <div class="real__text-inf">
                <h1 class="real__title">{title}</h1>
                <h2 class="real__subtitle">{subtitle}</h2>
            </div>
        </div>
        <div class="real__image">
            <Image src={image} alt="image" />
        </div>
        <div class="real__options">
            <div class="real__option">
                <h1 class="real__option-title">{option1}</h1>
                <h2 class="real__option-subtitle option-subtitle__subtitle1">{span1}</h2>
            </div>
            <div class="real__option">
                <h1 class="real__option-title">{option2}</h1>
                <h2 class="real__option-subtitle option-subtitle__subtitle2">{span2}</h2>
            </div>
            <div class="real__option">
                <h1 class="real__option-title">{option3}</h1>
                <h2 class="real__option-subtitle option-subtitle__subtitle3">{span3}</h2>
            </div>
        </div>
        <div class="real__text">{text}</div>
        <div class="real__button">
            <button class="real__button-read">Leer el Caso Pr√°ctico Completo</button>
        </div>
    </div>
</article>

<style lang="scss">
  @reference '@styles/global';

  .real {
    &__container{
      @apply p-10 bg-white rounded-xl shadow-2xl h-full;
    }

    &__information{
        @apply grid grid-cols-[1fr_6fr] mb-6;
    }

    &__icon{
        @apply bg-why1 w-fit h-fit p-5 rounded-2xl;
    }

    &__title{
        @apply text-2xl font-bold;
    }
    &__subtitle{
        @apply text-subtitle text-lg font-medium;
    }

    &__image{
        @apply mb-6;
    }

    &__options{
        @apply mb-8;
    }

    &__option{
        @apply bg-bg mb-4 rounded-lg flex justify-between px-6 py-4;
    }

    &__option-title{
        @apply text-base font-semibold text-subtitle;
    }

    &__option-subtitle{
        @apply text-2xl font-bold text-subtitle;

        &.option-subtitle__subtitle1{
            @apply text-lead;
        }

        &.option-subtitle__subtitle2{
            @apply text-span-communication;
        }

        &.option-subtitle__subtitle3{
            @apply text-span-solution;
        }
    }

    &__text{
        @apply text-subtitle text-base mb-6;
    }

    &__button-read{
        @apply bg-lead w-full text-white px-6 py-3 rounded-full font-semibold hover:bg-green-700 transition cursor-pointer;
    }
  }
</style>


