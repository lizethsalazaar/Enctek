---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
    icon: ImageMetadata;
    title: string;
    text: string;
    span: string;
}

const { icon, title, text, span } = Astro.props;
---

<article class="get">
    <div class="get__container">
        <div class="get__icon-container">
            <div class="get__icon">
                <Image src={icon} alt="icon" />
            </div>
        </div>
        <div class="get__information">
            <h1 class="get__title">{title}</h1>
            <p class="get__text">{text}</p>
            <p class="get__span">{span}</p>
        </div>
    </div>
</article>

<style lang="scss">
  @reference '@styles/global';

  .get{
    &__container{
      @apply p-4 rounded-xl h-full grid grid-cols-[1fr_7fr];
    }

    &__icon{
        @apply bg-white rounded-xl w-fit p-4 mb-4;
    }

    &__title{
        @apply text-xl text-title font-bold mb-2;
    }

    &__text{
        @apply text-base text-subtitle font-medium mb-2;
    }

    &__span{
        @apply text-base text-span-communication font-bold whitespace-pre-line;
    }

  }
</style>
